{% macro ThemeSwitcher() %}
  <div class="switcher">
    <input class="switcher__input" type="checkbox" id="theme-toggle">
    <label for="theme-toggle" class="switcher__label">
      <span class="switcher__icon is-light">
        <img src="images/sun.svg" alt="sun" width="12" height="12">
      </span>
      <span class="switcher__icon is-dark">
        <img src="images/moon.svg" alt="moon" width="12" height="12">
      </span>
    </label>
  </div>
{% endmacro %}